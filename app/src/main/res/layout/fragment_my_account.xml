<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.payex.android.ui.account.MyAccountFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_merchant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp"
            app:srcCompat="@drawable/ic_shopicon_myaccount" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_merchant"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Starbucks Malaysia"
            android:textAppearance="@style/AppTheme.TextBody1Bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="BIN: "
                android:textAppearance="@style/AppTheme.TextBody1" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_bin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLines="1"
                android:text="123456"
                android:textAppearance="@style/AppTheme.TextBody1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="MID: "
                android:textAppearance="@style/AppTheme.TextBody1" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_mid"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLines="1"
                android:text="1234567890"
                android:textAppearance="@style/AppTheme.TextBody1" />
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="@dimen/spacing_xl"
            android:layout_marginTop="@dimen/spacing_xl"
            android:background="?android:attr/listDivider" />

        <ImageView
            android:id="@+id/iv_acquirer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp"
            app:srcCompat="@drawable/ic_ambank_75dp" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_acquirer"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="My Bank International"
            android:textAppearance="@style/AppTheme.TextBody1Bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Tel: "
                android:textAppearance="@style/AppTheme.TextBody1" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_bank_contact_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLines="1"
                android:text="(60)3-12345678"
                android:textAppearance="@style/AppTheme.TextBody1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:ellipsize="end"
                android:maxLines="1"
                android:textAppearance="@style/AppTheme.TextBody1" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_bank_contact_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLines="1"
                android:text="(60)3-12345678"
                android:textAppearance="@style/AppTheme.TextBody1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Email: "
                android:textAppearance="@style/AppTheme.TextBody1" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_bank_email"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLines="1"
                android:text="payex@payex.io"
                android:textAppearance="@style/AppTheme.TextBody1" />
        </LinearLayout>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>

